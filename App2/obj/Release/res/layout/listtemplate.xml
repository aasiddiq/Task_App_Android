<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="8dp" xmlns:android="http://schemas.android.com/apk/res/android"><!-- Thumbnail Image --><ImageView android:id="@+id/thumbnail" android:layout_width="80dp" android:layout_height="80dp" android:layout_alignParentLeft="true" android:layout_marginRight="8dp" /><!-- Movie Title --><TextView android:id="@+id/txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/thumbnail" android:layout_toRightOf="@+id/thumbnail" android:textSize="17dp" android:textStyle="bold" /><!-- Rating --><TextView android:id="@+id/txtLang" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/txtTitle" android:layout_marginTop="1dip" android:layout_toRightOf="@+id/thumbnail" android:textSize="15dip" /><!-- Genre --><TextView android:id="@+id/txtDuration" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/txtLang" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/thumbnail" android:textColor="#666666" android:textSize="13dip" /></RelativeLayout>